<%- include('_layouts/header') -%>
<h2>Below are the posts available for Editing</h2>
<form>
    <div class="post-viewer">
        <h3>#</h3>
        <h3>Title</h3>
        <h3>Date Added</h3>
        <h3></h3>
        <h3></h3>
        <h3></h3>
        <!-- List of posts avialable for Update and Delete -->
        <%var i = 1%>
        <%posts.forEach((post) => {%>
            <h3><%=i++%></h3>
            <h3><%=post.postTitle%></h3>
            <h3><%=post.postTime%></h3>
            <a href="/post/<%=post._id%>">View Post</a>
            <a href="/post/edit/<%=post._id%>">Edit Post</a>
            <a href="/post/delete/<%=post._id%>">Delete Post</a>
            
        <%})%>
    </div>
</form>
<%- include('_layouts/footer') -%>